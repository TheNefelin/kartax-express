<section class="admin2-contenedor-titulo">
    <div>
        <h2>Usuarios</h2>
        <button id="addUsuario" class="btn animacion"><span>&#10010; Nuevo Usuario</span></button>
    </div>
</section>

<section class="admin2-mantenedor">
    <table>
        <tr>
            <th>id</th>
            <th>Usuario</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Correo</th>
            <th>Estado</th>
            <th>Rol</th>
            <th>fecha</th>
            <th></th>
        </tr>
        {{#each usuarios}}
        <tr>   
            <td>{{id}}</td>
            <td>{{usuario}}</td>
            <td>{{nombres}}</td>
            <td>{{apellidos}}</td>
            <td>{{correo}}</td>
            <td>{{is_active}}</td>
            <td>{{rol}}</td>
            <td>{{fecha}}</td>
            <td id={{id}} class="admin2-mantenedor-btn"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></td>
        </tr>
        {{/each}}
    </table>
</section>

{{!-- modal para crear nuevo usuario --}}
<div id="modalCrear" class="admin2-modal">
    <div><i class="fa fa-times fa-3x" aria-hidden="true"></i></div>

    <h2>Nuevo Usuario</h2>

    <section class="admin2-modal-contenedor">
        <form id="negocioFormCrear" action="/admin/usuario" method="POST">
            <label>Usuario</label>
            <input type="text" name="Usuario" id="Usuario" placeholder="Usuario1">
            <br>
            <label>Nombres</label>
            <input type="text" name="Nombres" id="Nombres" placeholder="Johannes Chrysostomus">
            <br>
            <label>Apellidos</label>
            <input type="text" name="Apellidos" id="Apellidos" placeholder="Wolfgangus Theophilus Mozartâ€‹">
            <br>
            <label>Correo</label>
            <input type="email" name="email" id="email" placeholder="Demo">
            <br>
            <label>Activo: <input type="checkbox" name="check" id="check"></label>
            <div><hr></div>
            <button class="btn animacion"><span>Crear</span></button>
        </form>
    </section>
</div>

<script>
    // visualiza el modal par aun nuevo usuario
    const addUsuario = document.querySelector("#addUsuario");
    addUsuario.addEventListener("click", () => {
        const admin2ModalContenedor = document.querySelectorAll("#negocioFormCrear input");

        admin2ModalContenedor[0].value = "";
        admin2ModalContenedor[1].value = "";
        admin2ModalContenedor[2].value = "";
        admin2ModalContenedor[3].value = "";
        admin2ModalContenedor[4].checked = false;

        const modalCrear = document.querySelector("#modalCrear");
        modalCrear.classList.add("admin2-modal_visible");
    });

    // cierra el modal para crear negocio
    const cerrarModalCrear = document.querySelector("#modalCrear > div");
    cerrarModalCrear.addEventListener("click", () => {
        cerrarModal();
    });

    function cerrarModal() {
        const modalCrear = document.querySelector("#modalCrear");
        modalCrear.classList.remove("admin2-modal_visible");

        const modalModificar = document.querySelector("#modalModificar");
        modalModificar.classList.remove("admin2-modal_visible");
    };
</script>