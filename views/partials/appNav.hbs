{{> appRRSS}}

<script>
    const linkContainer = document.querySelector(".navBar-links"); 

    const burger = document.querySelector(".navBar-btn");
    burger.addEventListener("click", () => {
        navBar();
    });

    const arrLinks = document.querySelectorAll(".navBar-links a");
    arrLinks.forEach(e => {
        e.addEventListener("click", () => {
            navBar();
        });
    });

    function navBar() {
        burger.classList.toggle("navBar-btn_click");
        linkContainer.classList.toggle("navBar-links_noOcultar");
    };

    const RRSS =  document.querySelector("#RRSS");
    RRSS.addEventListener("click", () => {
        const rrssContenedor =  document.querySelector(".rrss-contenedor");
        rrssContenedor.classList.toggle("rrss-contenedor_noOcultar")
    });
</script>