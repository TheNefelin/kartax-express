    <section class="navBar-contenedor">
        <a href="#" class="navBar-logo">
            <img src="/img/logo.png">
            <h1>Kartax</h1>
        </a>
        <div class="navBar-btn">
            <div class="navBar-A"></div>
            <div class="navBar-B"></div>
            <div class="navBar-C"></div>
        </div>
        <div class="navBar-links">
            <a href="#">Link 1</a>
